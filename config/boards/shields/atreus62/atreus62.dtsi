/*
 * https://github.com/qmk/qmk_firmware/blob/master/keyboards/atreus62/config.h
 */

#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &default_transform;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <12>;
        rows = <6>;
        map = <
            RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5)                 RC(0,6) RC(0,7) RC(0,8) RC(0,9) RC(0,10) RC(0,11)
            RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5)                 RC(1,6) RC(1,7) RC(1,8) RC(1,9) RC(1,10) RC(1,11)
            RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5)                 RC(2,6) RC(2,7) RC(2,8) RC(2,9) RC(2,10) RC(2,11)
            RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4) RC(3,5)                 RC(3,6) RC(3,7) RC(3,8) RC(3,9) RC(3,10) RC(3,11)
            RC(4,0) RC(4,1) RC(4,2) RC(4,3) RC(4,4) RC(4,5)                 RC(4,6) RC(4,7) RC(4,8) RC(4,9) RC(4,10) RC(4,11)
            RC(5,0) RC(5,1)
        >;
    };
    
    kscan0: kscan_0 {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN";
        diode-direction = "col2row";

        row-gpios
                = <&pro_micro_d B6 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN>)
                , <&pro_micro_d B7 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN>)
                , <&pro_micro_d A15 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN>)
                , <&pro_micro_d B3 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN>)
                , <&pro_micro_d B4 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN>)
                , <&pro_micro_d B5 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN>)
                ;

        col-gpios
                = <&pro_micro_a A3 (GPIO_ACTIVE_HIGH>) /* QMK F4 */
                , <&pro_micro_a A2 (GPIO_ACTIVE_HIGH>) /* QMK F5 */
                , <&pro_micro_a A1 (GPIO_ACTIVE_HIGH>) /* QMK F6 */
                , <&pro_micro_a A0 (GPIO_ACTIVE_HIGH>) /* QMK F7 */
                , <&pro_micro_d C15 (GPIO_ACTIVE_HIGH>) /* QMK B1 */
                , <&pro_micro_d C14 (GPIO_ACTIVE_HIGH>) /* QMK B3 */
                , <&pro_micro_d A10 (GPIO_ACTIVE_HIGH>) /* QMK B2 */
                , <&pro_micro_a A9 (GPIO_ACTIVE_HIGH>) /* QMK B5 */
                , <&pro_micro_a A8 (GPIO_ACTIVE_HIGH>) /* QMK B4 */
                , <&pro_micro_d B15 (GPIO_ACTIVE_HIGH>) /* QMK E6 */
                , <&pro_micro_a B14 (GPIO_ACTIVE_HIGH>) /* QMK D7 */
                , <&pro_micro_d B13 (GPIO_ACTIVE_HIGH>) /* QMK C6 */
                ;
    };
};
